---
import Analytics from '@vercel/analytics/astro'
import  SpeedInsights  from "@vercel/speed-insights/astro"
import '@fontsource-variable/manrope';
import '@fontsource-variable/playfair-display';
import '../styles/global.css';
import { Image } from 'astro:assets';
import leaves from '../assets/leaves.svg';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Mladí učí o klimatu. Vzdělávací programy pro školy a veřejnost." } = Astro.props;
---

<!doctype html>
<html lang="cs" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Telperion</title>
		<Analytics />
		<SpeedInsights />
	</head>
	
	<body class="bg-cream text-dark-green font-sans antialiased">
		
		<div class="relative overflow-hidden flex flex-col min-h-screen z-0">
			
			<div class="absolute top-0 right-0 w-64 md:w-96 opacity-90 pointer-events-none z-10">
				<Image src={leaves} alt="" />
			</div>

			<div class="absolute bottom-0 left-0 rotate-180 w-64 md:w-96 opacity-90 pointer-events-none z-10">
				<Image src={leaves} alt="" />
			</div>

			<main class="flex-grow relative z-20">
				<slot />
			</main>
			
		</div>
	</body>
</html>