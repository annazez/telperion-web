---
import { Icon } from 'astro-icon/components';

interface Props {
  icon: string;
  title: string;
}

const { icon, title } = Astro.props;
---

<div class="bg-cream p-8 rounded-2xl border border-brand-green/30 hover:shadow-lg transition-shadow">
  <div class="w-12 h-12 bg-cream text-brand-green border border-brand-green/30 rounded-xl flex items-center justify-center mb-6">
    <Icon name={icon} class="w-7 h-7" />
  </div>
  <h3 class="text-xl font-bold text-brand-green mb-3 font-serif">{title}</h3>
  <p class="text-dark-green leading-relaxed">
    <slot />
  </p>
</div>